# Ignore node_modules (dependencies)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
pnpm-debug.log*

# Ignore build and compiled files
out/
dist/
.vscode-test/
*.vsix

# Allow only in the releases/ folder
!release/*.vsix

# Ignore TypeScript build files
*.tsbuildinfo
*.d.ts.map
*.d.ts

# Ignore VSCode settings and workspace files
.vscode/
.history/
*.code-workspace

# Ignore Mac system files
.DS_Store

# Ignore Windows system files
Thumbs.db
desktop.ini

# Ignore log files
*.log

# Ignore dotenv files (in case you use environment variables)
.env
.env.local
.env.development
.env.production
.env.test
.env*.local

# Ignore backup, temp, and miscellaneous generated files
*.bak
*.tmp
*.pid
*.swp
*.swo
*.log.*

# Ignore .npmrc if using private NPM registry credentials
.npmrc

# Ignore coverage reports (if using test frameworks)
coverage/
nyc_output/
